<extend name="Index/base" />
<block name="title">新增服务项 - wederful后台管理系统</block>
<block name="global">
    <script>
        var global = {
            qiniuUploadTokenUrl:'{:U("Product/qiniuUploadToken")}',
            uploadUrl:'{:U("Index/uploadImg")}'
        };
    </script>
</block>

<block name="main-class">
    <main class="main bb pr page_service">
</block>
<block name="main">
    <!-- 导航栏 -->
    <div class="con-nav i-lh30 i-bcm p10 mb20 c">
        <nav class="fl">
            <a href="{:U('Index/goodsManage/')}">商品管理</a>
            <a href="###">新增商品</a>
        </nav>
    </div>
    <!-- ************************************ -->
    <div id="###" class="none">
    </div>
    <!-- ************************************ -->
    <form class="package-form" action="###" method="POST">
        <table class="con-show w1">
            <tbody>
                <tr>
                    <td>商品大类</td>
                    <td>
                        <select class="i-select i-w-long" name="###">
                            <option value="null">选择类型</option>
                            <option value="1">婚礼场地</option>
                        </select>
                    </td>
                    <td>&emsp;</td>
                </tr>
                <tr>
                    <td>服务商</td>
                    <td>
                        <select class="i-select i-w-long" name="###">
                            <option value="null">选择服务商</option>
                            <!-- <option value="1">服务商</option> -->
                        </select>
                    </td>
                    <td>&emsp;</td>
                </tr>
                <tr>
                    <td>商品大类</td>
                    <td>
                        <select class="i-select i-w-long" name="###">
                            <option value="null">选择类型</option>
                            <option value="1">婚礼场地</option>
                        </select>
                    </td>
                    <td>&emsp;</td>
                </tr>
                <tr>
                    <td>商品大类</td>
                    <td>
                        <select class="i-select i-w-long" name="###">
                            <option value="null">选择类型</option>
                            <option value="1">婚礼场地</option>
                        </select>
                    </td>
                    <td>&emsp;</td>
                </tr>
                <tr>
                    <td>服务项名称</td>
                    <td>
                        <input class="i-input i-w-long" name="###" type="text" placeholder="中文名" />
                    </td>
                    <td>
                        <input class="i-input i-w-long" name="###" type="text" placeholder="英文名" />
                    </td>
                </tr>
                <tr>
                    <td>人数范围</td>
                    <td colspan="2">
                        <input class="i-input i-max-width mr10" type="text" name="number_range_min[1]"/> - <input class="i-input i-max-width ml10 mr10" type="text" name="number_range_max[1]"/>
                    </td>
                </tr>
                <tr>
                    <td>不可提供日期</td>
                    <td colspan="2">
                        <section class="dlb">
                            <div class="mb10">
                                <input name="no_provide_date_startdate[1][]" class="input-date i-input mr10 mb10" type="text" placeholder="选择开始日期" />到&ensp;<input name="no_provide_date_enddate[1][]" class="input-date i-input mr10" type="text" placeholder="选择结束日期" />
                                <button type="button" class="del-temp-dom i-button i-b-w mr10">删除</button>
                            </div>
                        </section>
                        <button data-html="unDayDom" class="add-dom i-button i-b-w mr10" type="button">+</button>
                    </td>
                </tr>
                <tr>
                    <td>日期/价格</td>
                    <td colspan="2">
                        <section class="dlb">
                            <div>
                                <input name="package_date_price_startdate[1][]" class="input-date i-input mr10 mb10" type="text" placeholder="选择开始日期" />到&ensp;<input name="package_date_price_enddate[1][]" class="input-date i-input mr10" type="text" placeholder="选择结束日期" />
                                <input name="package_date_price[1][]" class="i-input i-max-width mr10 mb10" type="text" placeholder="价格" />
                                <button type="button" class="del-temp-dom i-button i-b-w mr10 mb5">删除</button>
                            </div>
                        </section>
                        <button data-html="dayPriceDom" class="add-dom i-button i-b-w mr10" type="button">+</button>
                    </td>
                </tr>
                <tr>
                    <td>商品促销</td>
                    <td colspan="2">
                        <section class="dlb">
                            <div>
                                <input name="package_promotion_startdate[1][]" class="input-date i-input mr10 mb10" type="text" placeholder="选择开始日期" />到&ensp;<input name="package_promotion_enddate[1][]" class="input-date i-input mr10" type="text" placeholder="选择结束日期" />
                                <select class="i-select mr10 mb10" name="promotion[1][]">
                                    <volist name="promotionData" id="promotion">
                                        <option value="{$promotion.id}">{$promotion.value}</option>
                                    </volist>
                                </select>
                                <button type="button" class="del-temp-dom i-button i-b-w mr10 mb5">删除</button>
                            </div>
                        </section>
                        <button data-html="goodsPromotDom" class="add-dom i-button i-b-w mr10" type="button">+</button>
                    </td>
                </tr>
                <tr>
                    <td>套餐内容</td>
                    <td>
                        <textarea name="content[1]" class="edit-dom i-textarea i-w-long" placeholder="套餐内容中文描述"></textarea>
                    </td>
                    <td>
                        <textarea name="content_en[1]" class="edit-dom i-textarea i-w-long" placeholder="套餐内容英文描述"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>赠送服务</td>
                    <td>
                        <textarea name="gift_service[1]" class="edit-dom i-textarea i-w-long" placeholder="赠送服务中文描述"></textarea>
                    </td>
                    <td>
                        <textarea name="gift_service_en[1]" class="edit-dom i-textarea i-w-long" placeholder="赠送服务英文描述"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>增值服务/价格</td>
                    <td colspan="2">
                        <section class="dlb">
                            <div class="mb10">
                                <input name="add_value_name[1][]" class="i-input mr10 mb5" type="text" placeholder="增值服务中文" />
                                <input name="add_value_name_en[1][]" class="i-input mr10" type="text" placeholder="增值服务英文" />
                                <input name="add_value_price[1][]" class="i-input mr10 i-max-width" type="text" placeholder="价格" />
                                <button type="button" class="del-temp-dom i-button i-b-w mr10">删除</button>
                            </div>
                        </section>
                        <button data-html="exPriceDom" class="add-dom i-button i-b-w mr10" type="button">+</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="con-operation tac pt20 mb30">
            <button class="i-button i-b-mw">保存</button>
        </div>
    </form>
</block>