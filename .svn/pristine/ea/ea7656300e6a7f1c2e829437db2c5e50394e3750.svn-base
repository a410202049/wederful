/**
 * mask
 */

#mask {
    position: fixed;
    z-index: 1001;
    top: 0;
    left: 0;
    display: none;
    width: 100%;
    height: 100%;
    /*chrome 内核 浏览器 position: fixed 防止抖动*/
    -webkit-transform: translateZ(0);
    background-color: rgba(0, 0, 0, .6);
}


/**
 * remaind
 */

.remaind-wrap {
    width: 300px;
    height: 125px;
    text-align: center;
}

#remaindMessage {
    display: block;
    height: 50px;
    padding: 20px 10px;
    background-color: #fff;
}

.remaind-confirm {
    font-weight: 100;
    font-size: 16px;
    line-height: 38px;
    display: block;
    cursor: pointer;
    letter-spacing: 2px;
    background-color: #e9e9e9;
}

.remaind-confirm:hover {
    color: #fff;
    background-color: #bdb099;
}


