/**
 * css hart
 */

.css-hart {
    position: absolute;
    width: 14px;
    height: 14px;
    background-color: #999;
}

.css-hart,
.css-arrow::before {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
}

.css-hart::before {
    position: absolute;
    top: 0;
    left: -7px;
    width: 14px;
    height: 14px;
    content: '';
    border-radius: 7px;
    background-color: #999;
}

.css-hart::after {
    position: absolute;
    top: -7px;
    left: 0;
    width: 14px;
    height: 14px;
    content: '';
    border-radius: 7px;
    background-color: #999;
}

.css-hart.active,
.css-hart.active::before,
.css-hart.active::after {
    background-color: #f55;
}


/**
 * css arrow
 */

.css-arrow {
    overflow: hidden;
    width: 20px;
    height: 11px;
}

.css-arrow::before {
    position: absolute;
    top: -8px;
    left: 2px;
    width: 12px;
    height: 12px;
    content: '';
    border: 1px solid #999;
}

.css-arrow.active::before {
    top: 5px;
}


