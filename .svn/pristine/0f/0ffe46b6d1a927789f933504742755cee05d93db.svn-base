@charset 'utf-8';

/*背景*/

.title-wrap {
    min-width: 202px;
}

.title-text {
    top: 50%;
    margin-top: -28px;
}


/*all-wrap*/

.con-wrap {
    margin-top: 80px;
    margin-bottom: 80px;
}


/*aside*/

.aside {
    width: 150px;
    padding-top: 2px;
    padding-left: 50px;
}

.portrait-btn {
    padding: 8px 10px;
    border: 1px solid #bdb099;
}

.portrait-btn:hover,
.send-code:hover {
    color: #fff;
    background-color: #bdb099;
}

.aside-nav {
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
}


/*content*/

.con-main {
    width: 720px;
    padding-right: 50px;
}

.main-nav {
    padding: 10px 40px;
    border: 1px solid #e0e0e0;
}

.main-con {
    padding: 30px 40px;
    border: 1px solid #e0e0e0;
}

.label-item {
    display: block;
    margin-bottom: 15px;
}

.item-tip {
    display: inline-block;
    width: 100px;
}

.label-item input,
.label-item select,
.tel-wrap {
    line-height: 28px;
    width: 200px;
    margin-right: 10px;
    padding: 0 10px;
    border: 1px solid #e0e0e0;
}

.label-item select {
    width: 104px;
    height: 28px;
}

.label-tel {
    margin-bottom: 15px;
}

.tel-func {
    width: 240px;
}

.tel-func,
.tel-func button {
    line-height: 30px;
}

.send-code {
    border: 1px solid #bdb099;
    padding: 0 8px;
}

.status-tel.true {
    color: #9c9;
}

.status-tel.false {
    color: #ff2c55;
}

.save-btn button {
    width: 104px;
    margin-right: 10px;
    padding: 9px 0;
    border: 1px solid #bdb099;
    background-color: #bdb099;
}

.save-btn button:hover {
    color: #bdb099;
    background-color: #fff;
}


/*public*/

input[type="checkbox"] {
    position: relative;
    top: 2px;
}

.i-mw {
    min-width: 1000px;
}


/*icon*/

.i-icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    vertical-align: middle;
    background: url('../images/info/userCenterIcons.png') no-repeat;
}

.i-icon-data {
    background-position: 0 0;
}

.icon-data:hover .i-icon-data,
.icon-data.active .i-icon-data {
    background-position: -20px 0;
}

.icon-data:hover,
.icon-fav:hover,
.icon-mes:hover,
.main-nav li:hover,
.main-nav li.active,
.modify-tel:hover,
.aside-nav a.active {
    color: #bdb099;
}

.i-icon-fav {
    background-position: 0 -20px;
}

.icon-fav:hover .i-icon-fav,
.icon-fav.active .i-icon-fav {
    background-position: -20px -20px;
}

.i-icon-mes {
    background-position: 0 -60px;
}

.icon-mes:hover .i-icon-mes,
.icon-mes.active .i-icon-mes {
    background-position: -20px -60px;
}


/*other*/

.c1 {
    background-color: #979;
}

.c2 {
    background-color: #998;
}

.c3 {
    background-color: #ffe;
}
