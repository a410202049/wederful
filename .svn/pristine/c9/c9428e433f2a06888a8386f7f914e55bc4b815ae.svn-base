}

.i-ser {
    background-position: -60px 0;
}

.fadeIn {
    opacity: 1 !important;
}

@media screen and (max-width: 1100px) {
    .sect-con {
        width: 800px;
    }
}

@media screen and (max-width: 900px) {
    .sect-con {
        width: 400px;
    }
}

@media screen and (max-height: 850px) {
    .direction {
        bottom: 20px;
    }
    .footer-up {
        padding-bottom: 0;
    }
    .footer-up h1 {
        padding-top: 72px;
    }
    .footer-down {
        padding-top: 20px;
    }
    .footer-con {
        padding: 20px 0 30px 0;
    }
}

@media screen and (max-height: 820px) {
    .footer-con ul {
        margin: 10px;
    }
}