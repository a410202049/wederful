<extend name="Public/base" />
<block name="title">服务项管理 - wederful后台管理系统</block>
<block name="global">
    <script>
        var global = {};
    </script>
</block>

<block name="main-class">
    <main class="main bb pr page_service">
</block>
<block name="main">
    <!-- 导航栏 -->
    <div class="con-nav i-lh30 i-bcm h30 p10 mb20 c">
        <nav class="fl">
            <a href="{:U('Service/index/')}">服务项管理</a>
        </nav>
        <div class="fr c">
            <!-- 第一个不需要 class ml20 -->
            <label class="nav-search fl">
                <input class="service-search-ipt i-input i-b1m fl" type="text" />
                <button class="service-search-btn i-button fl" type="botton">搜索</button>
            </label>
            <a href="{:U('Service/addServiceOne/')}" class="i-button i-b-mw fl ml20">新增服务项</a>
        </div>
    </div>
    <!-- 搜索区域 select 集 -->
    <div class="mb20 c">
        <select class="i-select fl mr10">
            <option value="null">选择商品大类</option>
            <option value="1">婚纱摄影</option>
        </select>
        <select class="i-select fl mr10">
            <option value="null">选择服务地区</option>
            <option value="1">巴厘岛</option>
        </select>
        <select class="i-select fl mr10">
            <option value="null">选择服务商</option>
            <option value="1">洲际酒店</option>
        </select>
    </div>
    <!-- 结果展示区域 table -->
    <table class="i-table mb20 w1">
        <thead>
            <tr>
                <th>商品类型</th>
                <th>服务商</th>
                <th>服务项</th>
                <!-- <th>服务地区</th>
                <th>显示顺序</th> -->
                <th>商品数</th>
                <th>访问数</th>
                <th>上传者</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
          <volist name="result" id="re">
            <tr>
                <td>{$re.categoryName}</td>
                <td>{$re.vendorName}</td>
                <td>{$re.name}</td>
                <td>3</td>
                <td>123</td>
                <td>hangyangws</td>
                <td>
                    <div>
                        <a class="dlb mr30 cp">查看</a><a class="dlb cp">复制</a>
                    </div>
                    <div>
                        <a class="dlb mr30 cp">编辑</a><a class="dlb cp">发布</a>
                    </div>
                </td>
            </tr>
          </volist>
        </tbody>
    </table>
    <!-- 分页 paging -->
    <div class="con-paging mb20 c h30 i-lh30">
        <dl class="fl mr20">
            <dt class="dlb">服务项数量：</dt>
            <dd class="dlb">123</dd>
        </dl>
        <div class="fl mr20">
            <span>当前页：</span>
            <div class="dlb">
                <i class="paging-dir disable">&lt;</i>
                <span class="paging-now">1</span>
                <i class="paging-dir">&gt;</i>
            </div>
        </div>
        <div class="fl">
            转到
            <select data-role="p-go" class="pading-change i-select">
                <option value="1" selected="selected">1</option>
            </select>
            页
        </div>
    </div>
</block>

<block name="script">
    <!-- 富文本 -->
    <link rel="stylesheet" href="__PUBLIC__/Admin/css/simditor.css" />
    <script src="__PUBLIC__/Admin/js/module.min.js"></script>
    <script src="__PUBLIC__/Admin/js/uploader.min.js"></script>
    <script src="__PUBLIC__/Admin/js/hotkeys.min.js"></script>
    <script src="__PUBLIC__/Admin/js/simditor.min.js"></script>
    <!-- 七牛图片上传 -->
    <script src="__PUBLIC__/Admin/js/plupload.min.js" ></script>
    <script src="__PUBLIC__/Admin/js/qiniu.min.js" ></script>
    <!-- this -->
    <script src="__PUBLIC__/Admin/js/service.js"></script>
</block>
